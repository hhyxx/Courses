<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper">
  <insert id="insert">
    insert into Spring.product (name, price)
    values (#{name}, #{price})
  </insert>

  <!-- 参数对应 POJO 中 get 方法的小写名  -->
  <update id="update">
    update Spring.product set name = #{name}, price = #{price}
    where id = #{id}
  </update>

  <select id = "queryById" resultType="com.Bean.Product">
    select * from Spring.product where id = #{id}
  </select>

  <select id = "queryBlur" resultType="com.Bean.Product">
    select * from Spring.product where name like '%${name}'
  </select>

  <delete id="delete">
    delete from Spring.product where id = #{id}
  </delete>


</mapper>